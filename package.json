{
  "name": "hugh",
  "version": "0.7.5",
  "description": "Node.js Library for communicating with the Philips Hue Bridge and Lights",
  "main": "lib/index.js",
  "bugs": {
    "url": "https://github.com/gmickel/hugh/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gmickel/hugh"
  },
  "scripts": {
    "audit": "nsp check",
    "clean": "rimraf lib",
    "check": "npm run lint && npm test && npm run audit && npm outdated --depth 0",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production babel -d lib/ src/",
    "build:dev": "cross-env NODE_ENV=development babel -d lib/ src/ --source-maps",
    "build:doc": "doctoc --github --title \"## Contents\" ./src",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha --opts .mocha.opts test",
    "test:ava": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ava test/*.spec.js",
    "test:watch": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ava test/*.spec.js --watch",
    "test:test": "cross-env NODE_ENV=test ava",
    "test:dev": "npm test  | faucet",
    "fix": "xo --fix",
    "lint": "xo",
    "preversion": "npm run lint && npm run compile",
    "watch": "babel -d lib/ src/ --watch --source-maps both",
    "package:check": "ncu",
    "package:upgrade": "ncu -u",
    "validate": "npm run lint && npm test",
    "prepublish": "npm run build"
  },
  "author": "Gordon Mickel <gordon.mickel@gmail.com>",
  "contributors": [
    "Daniel Killenberger <daniel.killenberger@gmail.com>"
  ],
  "keywords": [
    "Hue",
    "Philips",
    "iot",
    "lights"
  ],
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-env": "^1.1.4",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "cross-env": "^3.1.3",
    "doctoc": "^1.2.0",
    "faucet": "^0.0.1",
    "husky": "^0.12.0",
    "jscs": "^3.0.7",
    "mocha": "^3.2.0",
    "npm-check-updates": "^2.8.9",
    "nsp": "^2.6.2",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "tape": "^4.6.3",
    "xo": "^0.17.1"
  },
  "dependencies": {
    "axios": "^0.15.3",
    "lodash": "^4.6.1",
    "superagent": "^3.3.1"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/test/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "all": true,
    "sourceMap": false,
    "instrument": false
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "mocha"
    ],
    "ignore": [
      "src/rgb.js"
    ]
  },
  "ava": {
    "files": [
      "test/*.spec.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!lib/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "cache": true
  }
}
